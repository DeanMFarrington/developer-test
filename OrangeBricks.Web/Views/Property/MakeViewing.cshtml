@model OrangeBricks.Web.Controllers.Property.ViewModels.MakeViewingViewModel

@{
    ViewBag.Title = "Make Viewing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Make Viewing</h2>

<p>When would you like to request a viewing for the @Model.PropertyType on @Model.StreetName?</p>

@using (Html.BeginForm("MakeViewing", "Property", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ViewingDate, "Date to Request", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Hidden("PropertyId", Model.PropertyId)
            @Html.TextBoxFor(m => m.ViewingDate, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Request Viewing" />
        </div>
    </div>
}